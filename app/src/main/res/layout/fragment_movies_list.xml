<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            tools:context=".MovieDetailsActivity">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="56dp"
                android:contentDescription="@string/aim"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/aim" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/movies_list"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/view2"
                android:layout_width="170dp"
                android:layout_height="296dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="102dp"
                android:background="@drawable/preview_film"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/preview_img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="14dp"
                android:layout_marginTop="104dp"
                android:contentDescription="@string/preview_img_1"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/movie_list_1" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/gradient_drawable"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/preview_img_1"
                app:layout_constraintEnd_toEndOf="@+id/preview_img_1"
                app:layout_constraintStart_toStartOf="@+id/preview_img_1"
                app:layout_constraintTop_toTopOf="@+id/preview_img_1" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="200dp"
                android:background="@color/gradient_end"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/preview_img_1"
                app:layout_constraintEnd_toEndOf="@+id/preview_img_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/preview_img_1" />
            <TextView
                android:id="@+id/ganre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="22dp"
                android:fontFamily="@font/roboto"
                android:text="@string/preview_text_ganre"
                android:textSize="8sp"
                android:textColor="@color/red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/preview_img_1" />

            <ImageView
                android:id="@+id/iv_star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ganre"
                app:srcCompat="@drawable/ic_baseline_star_red_8" />

            <ImageView
                android:id="@+id/iv_star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/iv_star_1"
                app:layout_constraintTop_toBottomOf="@+id/ganre"
                app:srcCompat="@drawable/ic_baseline_star_red_8" />

            <ImageView
                android:id="@+id/iv_star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/iv_star_2"
                app:layout_constraintTop_toBottomOf="@+id/ganre"
                app:srcCompat="@drawable/ic_baseline_star_red_8" />

            <ImageView
                android:id="@+id/iv_star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/iv_star_3"
                app:layout_constraintTop_toBottomOf="@+id/ganre"
                app:srcCompat="@drawable/ic_baseline_star_red_8" />

            <ImageView
                android:id="@+id/iv_star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/iv_star_4"
                app:layout_constraintTop_toBottomOf="@+id/ganre"
                app:srcCompat="@drawable/ic_baseline_star_8" />

            <TextView
                android:id="@+id/tv_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4sp"
                android:text="@string/reviews"
                android:textColor="@color/grey"
                android:textFontWeight="900"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/iv_star_5"
                app:layout_constraintTop_toBottomOf="@+id/ganre" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>